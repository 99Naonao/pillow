/* 模态框中的头像选择区域 - 独立样式 */
.modal-avatar-section {
  margin-bottom: 40rpx;
  text-align: center;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
  text-align: center;
}

.modal-avatar-wrapper {
  padding: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  overflow: hidden;
  box-sizing: border-box;
}

.modal-avatar {
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  object-fit: cover;
}

.modal-avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.modal-avatar-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.nickname-section {
  margin-bottom: 20rpx;
  text-align: center;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  max-width: 400rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: #f8f8f8;
}

.nickname-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
  padding: 0;
  margin: 0;
}

.nickname-input::placeholder {
  color: #999;
}

.new-avatar-modal-btns {
  display: flex;
  gap: 24rpx;
  padding: 20rpx 40rpx 40rpx 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.new-avatar-modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 0;
}

.new-avatar-modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.new-avatar-modal-btn.confirm {
  background: #1976d2;
  color: #fff;
}

.new-avatar-modal-btn.cancel:active {
  background: #e0e0e0;
}

.new-avatar-modal-btn.confirm:active {
  background: #1565c0;
}

/* 动画效果 */
@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}