/* pages/mine/mine.wxss */
.mine-bg {
  background: #0b2853;
  min-height: 100vh;
  padding: 0 0 40rpx 0;
}

.mine-card {
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  padding: 0;
  margin: 32rpx 24rpx 0 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.08);
  min-height: 120rpx;
  background: #cfb679;
}

.mine-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #fff;
  border: 2rpx solid #fff;
  object-fit: cover;
}

.user-profile-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  padding: 12rpx 0;
}

.avatar-section {
  position: relative;
  display: flex ;
  justify-content: center;
  align-items: center;
  margin-right: 24rpx;
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
  overflow: hidden;
}

.edit-icon {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background: #1976d2;
  border: 2rpx solid #fff;
  padding: 4rpx;
}



.user-info-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.user-id {
  font-size: 32rpx;
  color: #0b2853;
  font-weight: bold;
  text-align: left;
}

.logout-container {
  position: fixed;
  bottom: 140rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 24rpx;
  z-index: 100;
}

.mine-logout-btn {
  background: #175c77;
  color: #fff;
  border-radius: 36rpx;
  font-size: 24rpx;
  font-weight: bold;
  width: 80%;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mine-logout-btn:active {
  background: #175c77;
  border-color: #fff;
}

.mine-func-card {
  margin: 32rpx 24rpx 0 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.mine-func-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: #175c77;
  border-radius: 20rpx;
  min-height: 80rpx;
}

.mine-func-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.mine-func-icon {
  width: 36rpx;
  height: 36rpx;
}

.mine-func-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.mine-func-label {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

.mine-func-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.mine-switch {
  transform: scale(0.8);
}

.mine-arrow {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.8;
}

.not-login-content {
  width: 93%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border: 2rpx solid #0b2853;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}



.not-login-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.not-login-title {
  color: #0b2853;
  font-size: 28rpx;
  font-weight: bold;
}

.not-login-tip {
  color: #666;
  font-size: 24rpx;
  font-weight: normal;
}

.not-login-arrow {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.8;
}

/* 手机号输入弹窗样式 */
.phone-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.phone-modal {
  background: #fff;
  border-radius: 20rpx;
  width: 600rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.phone-modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.phone-modal-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  background: #f8f8f8;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.phone-modal-input:focus {
  border-color: #1976d2;
  background: #fff;
}

.phone-modal-btns {
  display: flex;
  gap: 24rpx;
}

.phone-modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.phone-modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.phone-modal-btn.confirm {
  background: #1976d2;
  color: #fff;
}

.phone-modal-btn.cancel:active {
  background: #e0e0e0;
}

.phone-modal-btn.confirm:active {
  background: #1565c0;
}

/* 头像编辑弹窗样式 - 从底部弹出 */
.avatar-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
}

.avatar-modal {
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  max-width: 750rpx;
  padding: 0;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.2);
  animation: slideUp 0.3s ease-out;
}

.avatar-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 20rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.avatar-modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

.avatar-modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
  line-height: 1;
}

.avatar-options {
  padding: 0;
}

.avatar-option-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
  transition: background-color 0.2s;
}

.avatar-option-item:active {
  background: #f5f5f5;
}

.avatar-option-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.avatar-modal-cancel {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  background: #fff;
  border-top: 20rpx solid #f5f5f5;
  transition: background-color 0.2s;
}

.avatar-modal-cancel:active {
  background: #f5f5f5;
}

.cancel-text {
  font-size: 32rpx;
  color: #ff3b30;
  font-weight: 500;
}

