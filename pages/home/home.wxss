/* 页面级别滚动控制 */
page {
  height: 100vh;
  overflow: hidden;
  position: fixed;
  width: 100vw;
}

.container {
  background: #083869;
  height: 100vh;
  width: 100vw;
  padding: 0;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
}

.top-space {
  height: 20rpx;
}

.pillow-img-wrapper {
  width: 100%;

  padding-top: 60%;
  position: relative;
  margin: 0 auto 32rpx auto;
  background: #083869;
  border-radius: 32rpx;
}

.pillow-img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.10);
  object-fit: contain;
  background-size: cover;
  background-position: center;
}

.device-bar {
  height: 80rpx;
  display: flex;
  align-items: center;
  border-radius: 60rpx;
  background: linear-gradient(179.41deg, rgba(163, 151, 116, 1) 41.22%, rgba(194, 178, 129, 1) 73.61%, rgba(204, 188, 141, 1) 94.91%);
  margin: 0 24rpx 32rpx 24rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  justify-content: center;
  opacity: 1;
  position: relative;
}

.icon-bluetooth {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
  text-align: center;
  align-self: center;
}

.device-text {
  font-weight: bold;
  text-align: center;
  line-height: 80rpx;
}

.card-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 24rpx;
  position: absolute;
  bottom: 180rpx;
  left: 0;
  right: 0;
}

.card {
  width: 48%;
  background: #175c77;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  padding: 24rpx 0 24rpx 0;
  display: flex;
  border-radius: 30rpx;
  flex-direction: column;
  align-items: center;
  position: relative;
  min-height: 180rpx;
}

.card-header {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 24rpx;
  left: 5%;
}

/* 设备状态指示器样式 */
.device-status-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 10;
  pointer-events: auto;
}

.status-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.3);
  transition: all 0.3s ease;
}

.status-circle.connected {
  background: #cfb679;
}

.status-circle.offline {
  background: #cfb679;
}

.status-circle:active {
  transform: scale(0.95);
}

.status-main-text {
  color: #0b2853;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.status-sub-text {
  color: #0b2853;
  font-size: 20rpx;
  font-weight: bold;
  line-height: 1.2;
}

.card-icon {
  width: 44rpx;
  height: 44rpx;
  font-weight: bold;
  color: #fff;
}

.card-title {
  font-size: 28rpx;
  color: #cfb679;
  font-weight: bold;
  margin-left: 16rpx;
}

.card-value {
  position: absolute;
  bottom: 24rpx;
  left: 0;
  right: 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  width: 100%;
}