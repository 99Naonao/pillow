.report-container {
  background: #0b2853;
  min-height: 100vh;
  color: #fff;
  font-family: 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  display: flex;
  flex-direction: column;
}
.report-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx 0 32rpx;
}
.icon-calendar {
  width: 36rpx;
  height: 36rpx;
}
.report-date {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
}
.summary-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 32rpx 32rpx 0 32rpx;
}
.sleep-duration {
  flex: 1;
}
.duration-title {
  font-size: 28rpx;
  color: #fff;
}
.duration-value {
  font-size: 40rpx;
  font-weight: bold;
  margin: 12rpx 0;
  color: #fff;
}
.time-row {
  display: flex;
  align-items: center;
}
.icon-time {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}
.time-label {
  font-size: 24rpx;
  color: #fff;
  margin-right: 8rpx;
}
.time-value {
  font-size: 24rpx;
  color: #fff;
}
.quality-circle {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.circle-score {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.score-title {
  font-size: 26rpx;
  color: #b0b0b0;
}
.score-level {
  font-size: 28rpx;
  color: #ffd700;
  margin: 4rpx 0;
}
.score-label {
  font-size: 22rpx;
  color: #b0b0b0;
}
.score-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-top: 4rpx;
}
.score-circle-wrap {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.score-circle-canvas {
  width: 220rpx;
  height: 220rpx;
}
.circle-score-abs {
  position: absolute;
  top: 0;
  left: 0;
  width: 220rpx;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  pointer-events: none;
}
.stage-row {
  display: flex;
  flex-direction: row;
  margin: 32rpx 32rpx 0 32rpx;
  align-items: center;
}
.stage-pie {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.pie-canvas {
  width: 200rpx;
  height: 200rpx;
}
.stage-legend {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 24rpx;
}
.legend-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.legend-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}
.legend-dot.shallow { background: #f7c873; }
.legend-dot.rem { background: #9c27b0; }
.legend-dot.deep { background: #5e7fff; }
.legend-percent {
  margin-left: auto;
  font-size: 24rpx;
  color: #fff;
}
.stage-legend-box {
  background: #175c77;
  border-radius: 20rpx;
  padding: 24rpx 20rpx;
  margin-left: 32rpx;
  flex: 1;
  display: flex;
  align-items: center;
  min-width: 160rpx;
}
.stage-pie ec-canvas {
  width: 160rpx;
  height: 160rpx;
}
.trend-card {
  background: #175c77;
  border-radius: 16rpx;
  margin: 32rpx;
  padding: 24rpx;
}
.trend-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.trend-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}
.trend-title {
  font-size: 26rpx;
  color: #b0b0b0;
  margin-right: 8rpx;
}
.trend-value {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}
.trend-card ec-canvas {
  width: 100%;
  height: 200px;  
  display: block;
  margin-top: 8rpx;
}
.time-block {
  width: 46%;
  height: 44%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 8rpx;
  padding: 10rpx 10rpx 0 10rpx;
  background-color: #175c77;
}
.time-divider {
  width: 80%;
  height: 2rpx;
  background: #cecece;
  margin: 10rpx 0 10rpx 30rpx;
  border-radius: 2rpx;
}
.date-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  margin: 0 auto;
  width: fit-content;
}
.date-picker-mask {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.date-picker-popup {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 32rpx 24rpx 32rpx;
  min-width: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.picker-inner {
  color: #35254F;
  font-size: 32rpx;
  margin-bottom: 32rpx;
}
.close-btn {
  margin-top: 24rpx;
  background: #35254F;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
}
.date-picker-inline {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.report-scroll-content {
  height: calc(100vh - 120rpx - 60rpx - 100rpx); 
}

/* 新增樣式 */
.snore-info {
  margin-top: 12rpx;
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
}

.snore-duration {
  font-size: 24rpx;
  color: #b0b0b0;
}

.assessment-content,
.advice-content {
  margin-top: 12rpx;
  padding: 12rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
}

.assessment-text,
.advice-text {
  font-size: 24rpx;
  color: #fff;
  line-height: 1.5;
}

.legend-dot.awake {
  background: #e97b7b;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #b0b0b0;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 商城按钮样式 */
.shop-section {
  margin: 32rpx;
  margin-bottom: 60rpx; /* 底部留更多空间 */
}

.shop-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.shop-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.shop-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.shop-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.shop-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.shop-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 24rpx;
  text-align: center;
  line-height: 1.4;
}

.shop-btn {
  background: #fff;
  color: #667eea;
  border: none;
  border-radius: 50rpx;
  padding: 5rpx 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.shop-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.2);
}