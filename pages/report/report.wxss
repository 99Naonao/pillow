  margin: 32rpx;
  margin-bottom: 60rpx; /* 底部留更多空间 */
}

.shop-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.shop-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.shop-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.shop-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.shop-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.shop-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 24rpx;
  text-align: center;
  line-height: 1.4;
}

.shop-btn {
  background: #fff;
  color: #667eea;
  border: none;
  border-radius: 50rpx;
  padding: 5rpx 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.shop-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.2);
}