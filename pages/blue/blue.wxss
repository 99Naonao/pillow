.page-container {
  min-height: 100vh;
  background: #083869;
  /* background: linear-gradient(135deg, #1B2845 0%, #274472 100%); */
}

.progress-container {
  height: 12rpx;
  border-radius: 6rpx;
  overflow: hidden;
}

.completed-step {
  opacity: 0.7;
}

.content-scroll {
  height: calc(100vh - 120rpx - 60rpx - 100rpx); 
}

.refresh-tip {
  color: #b0b0b0;
  text-align: center;
  margin: 24rpx 0 8rpx 0;
  font-size: 28rpx;
}

.search-result-title {
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  margin-bottom: 24rpx;
}

.device-list {
  margin: 0 32rpx;
}

.device-item {
  background: #2a223d;
  border-radius: 16rpx;
  padding: 32rpx 24rpx 24rpx 24rpx;
  margin-bottom: 24rpx;
}

.device-name {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.device-mac {
  color: #b0b0b0;
  font-size: 26rpx;
}

.wifi-tip {
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  text-align: center;
}
.wifi-list {
  margin-bottom: 20rpx;
}
.wifi-item {
  background: rgba(44, 56, 94, 0.7);
  border: 1rpx solid #1e52b4;
  border-width: 0 1rpx 1rpx 1rpx;
  color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  text-align: center;
  font-size: 28rpx;
}
.selected-wifi {
  border: 2rpx solid #24C9ED;
  color: #24C9ED;
}
.disabled-wifi {
  color: #fff;
  background: #35254F;
}
.wifi-type {
  font-size: 22rpx;
  margin-left: 12rpx;
}

.wifi-5g-tip{
  margin-top: 20rpx;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
}

.wifi-password {
  width: 80%;
  margin: 20rpx auto;
  display: block;
  padding: 16rpx;
  border-radius: 8rpx;
  border: none;
  background: #fff;
  font-size: 28rpx;
}

.wifi-btn-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 24rpx;
  margin-top: 32rpx;
}

.wifi-btn-row button {
  flex: 1;
  border-radius: 32rpx;
  height: 80rpx;
  font-size: 32rpx;
}

.change-wifi-btn {
  background: #fff;
  color: #24C9ED;
  border: 1rpx solid #24C9ED;
  border-radius: 32rpx;
  margin-left: 0;
}

.finish-tip {
  color: #24C9ED;
  font-size: 32rpx;
  text-align: center;
  margin: 40rpx 0;
}

/* 步驟條 */
.steps-bar {
  width: 90%;
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
  background: linear-gradient(180deg, rgba(46, 167, 255, 0) 57.41%, rgba(46, 167, 255, 0.1) 100%);
  border-radius: 50rpx;
  border: 1px solid;
  border-color: rgba(46,167,255,0.5);
  margin: 20rpx auto;
}
.step-btn {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  padding: 18rpx 0;
  border-radius: 50rpx;
  transition: background 0.2s, color 0.2s;
}
.step-btn-active {
  background: linear-gradient(90deg, #C1B18A 0%, #A89B7C 100%);
  color: #fff;
  font-weight: bold;
}

/* 蓝牙连接按钮 */
.bluetooth-wifi-btn-row {
  display: flex;
  justify-content: center;
  margin: 32rpx 0 24rpx 0;
}
.bluetooth-wifi-btn {
  width: 80%;
  height: 120rpx;
  display: flex;
  align-items: center;
  background: linear-gradient(180deg, #2B3A6B 0%, #274472 100%);
  color: #fff;
  border: 1px solid;
  border-color: rgba(46,167,255,0.5);
  border-radius: 32rpx;
  font-size: 32rpx;
  padding: 0 40rpx;
  box-shadow: 0 4rpx 16rpx 0 rgba(0,0,0,0.18);
}
.bluetooth-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 設備卡片 */
.device-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: rgba(44, 56, 94, 0.7);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(0,0,0,0.18);
  border: 2rpx solid #3A4B7C;
  margin-bottom: 32rpx;
  padding: 32rpx 32rpx 32rpx 32rpx;
}
.device-card-info {
  display: flex;
  flex-direction: column;
}
.device-switch {
  margin-left: 32rpx;
  transform: scale(0.9);
}

/* 自定义switch */
.custom-switch {
  width: 88rpx;
  height: 44rpx;
  border-radius: 22rpx;
  background: #393e4c;
  position: relative;
  transition: background 0.2s;
  margin-left: 24rpx;
  display: flex;
  align-items: center;
}
.switch-on {
  background: linear-gradient(90deg, #C1B18A 0%, #A89B7C 100%);
}
.switch-off {
  background: #393e4c;
}
.switch-slider {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  left: 4rpx;
  top: 2rpx;
  transition: left 0.2s;
}
.switch-on .switch-slider {
  left: 44rpx;
  background: #C1B18A;
}
.switch-off .switch-slider {
  left: 4rpx;
  background: #fff;
}

.wifi-card {
  background: rgba(44, 56, 94, 0.7);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(0,0,0,0.18);
  border: 1rpx solid #1e52b4;
  border-width: 0 1rpx 1rpx 1rpx;
  margin: 32rpx 32rpx 0 32rpx;
  padding: 32rpx 32rpx 24rpx 32rpx;
}
.wifi-card-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.wifi-name {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}
.wifi-5g-badge {
  color: #fff;
  background: #A89B7C;
  font-size: 22rpx;
  border-radius: 12rpx;
  padding: 2rpx 16rpx;
  margin-left: 12rpx;
}
.wifi-password-input {
  width: 100%;
  height: 50px;
  margin: 0 0 24rpx 0;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  border: none;
  background: #fff;
  font-size: 28rpx;
  color: #c4c4c4;
  box-sizing: border-box;
}
.wifi-btn-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 24rpx;
  margin-top: 0;
  margin-bottom: 12rpx;
}
.wifi-action-btn {
  flex: 1;
  border-radius: 32rpx;
  height: 80rpx;
  font-size: 32rpx;
  background: linear-gradient(90deg, #2B3A6B 0%, #274472 100%);
  color: #fff;
  border: none;
  margin: 0;
}
.change-wifi-btn {
  background: #fff;
  color: #2B3A6B;
  border: 1rpx solid #2B3A6B;
  margin-left: 0;
}
.wifi-5g-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  text-align: left;
  color: #fff;
  opacity: 0.8;
}

.finish-card {
  background: radial-gradient(44% 110% at 17.5% 4.3%, rgba(46, 167, 255, 0.25) 0%, rgba(28, 27, 51, 0.1) 78.06%);
  border-radius: 24rpx;
  border: 1rpx solid #1e52b4;
  border-width: 1rpx 0 0 1rpx;
  margin: 48rpx 32rpx 0 32rpx;
  padding: 56rpx 32rpx 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 32rpx 0 rgba(0,0,0,0.18);
}
.finish-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
}
.finish-title {
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 48rpx;
  text-align: center;
}
.finish-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(179.41deg, rgba(163, 151, 116, 1) 41.22%, rgba(194, 178, 129, 1) 73.61%, rgba(204, 188, 141, 1) 94.91%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border: 1px solid #fff;
  border-width: 0px 0px 1px 1px;
}