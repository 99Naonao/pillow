/* 登錄按鈕 */
.login-btn {
  margin-top: 40rpx;
  width: 100%;
  height: 100rpx;
  border-radius: 48rpx;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
  margin-right: auto;
}

.login-btn.active {
  background: #175c77;
  color: white;
}

.login-btn.disabled {
  background: #fff;
  color: #000;
  box-shadow: none;
}

.login-btn.active:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(74, 144, 226, 0.3);
}

/* 底部鏈接 */
.bottom-links {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.link-item {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
  position: relative;
}

.link-item::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 100%;
  height: 2rpx;
  background-color: #fff;
}

/* 響應式適配 */
@media (max-width: 750rpx) {
  .main-content {
    padding: 30rpx 40rpx;
  }
  
  .logo {
    width: 140rpx;
    height: 140rpx;
  }
  
  .logo-text {
    font-size: 42rpx;
  }
  
  .input-field {
    font-size: 30rpx;
  }
  
  .login-btn {
    height: 90rpx;
    font-size: 34rpx;
  }
}