/* page_subject/login/login.wxss */

.login-container {
  min-height: 100vh;
  background: #0b2853;
  display: flex;
  flex-direction: column;
}

/* 頂部導航欄 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: transparent;
  position: relative;
  z-index: 10;
}

.header-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.header-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #ffffff;
}

/* 主要內容區域 */
.main-content {
  flex: 1;
  padding: 40rpx 60rpx;
  display: flex;
  flex-direction: column;
}

/* Logo容器 */
.logo-container {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
  margin-top: 40rpx;
}

.logo {
  width: 240rpx;
  height: 240rpx;
}

/* 登錄方式切換 */
.login-tabs {
  display: flex;
  background: #175c77;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #fff;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #cfb679;
  color: #175c77;
  font-weight: 600;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}

/* 表單容器 */
.form-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 輸入框組 */
.input-group {
  position: relative;
  display: flex;
  align-items: center;
  background: #175c77;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  margin-bottom: 20rpx;
  min-height: 100rpx;
}

.input-group:focus-within {
  border-color: #4a90e2;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.3);
}

.input-field {
  flex: 1;
  height: 100rpx;
  font-size: 32rpx;
  color: #fff;
  background: transparent;
  border: none;
  outline: none;
  padding: 0;
  margin: 0;
  line-height: 100rpx;
  min-height: 100rpx;
  display: block;
  width: 100%;
  box-sizing: border-box;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
}

.input-field::placeholder {
  color: RGB(255,255,255,0.8);
}

/* 驗證碼組 */
.verification-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.verification-input {
  flex: 1;
}

.verification-btn {
  padding: 20rpx 30rpx;
  color: #cfb679;
  border-radius: 12rpx;
  font-size: 28rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
  font-weight: 500;
}

.verification-btn.disabled {
  color: #fff;
}

/* 眼睛圖標 */
.eye-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.eye-image {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.8;
}

/* 忘記密碼 */
.forgot-password {
  font-size: 28rpx;
  color: #4a90e2;
  margin-left: 20rpx;
  white-space: nowrap;
  font-weight: 500;
}

/* 協議容器 */
.agreement-container {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 20rpx;
  flex-wrap: nowrap;
  white-space: nowrap;
  overflow: hidden;
}

.agreement-checkbox {
  transform: scale(0.8);
  flex-shrink: 0;
}

.agreement-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255);
  white-space: nowrap;
  flex-shrink: 0;
}

.link-text {
  color: #cfb679;
  font-weight: 500;
  position: relative;
  white-space: nowrap;
  flex-shrink: 0;
}

