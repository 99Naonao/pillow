/* page_subject/register/register.wxss */

.register-container {
  min-height: 100vh;
  background: #083869;
  display: flex;
  flex-direction: column;
}

/* 頂部導航欄 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: transparent;
  position: relative;
  z-index: 10;
}

.header-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.header-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #ffffff;
}

/* 主要內容區域 */
.main-content {
  flex: 1;
  padding: 40rpx 60rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 60rpx;
  text-align: center;
}

/* 表單容器 */
.form-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 輸入框組 */
.input-group {
  position: relative;
  display: flex;
  align-items: center;
  background: #175c77;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  margin-bottom: 20rpx;
  min-height: 100rpx;
}

.input-group:focus-within {
  border-color: #4a90e2;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.3);
}

.input-field {
  flex: 1;
  height: 100rpx;
  font-size: 32rpx;
  color: #fff;
  background: transparent;
  border: none;
  outline: none;
  padding: 0;
  margin: 0;
  line-height: 100rpx;
  min-height: 100rpx;
  display: block;
  width: 100%;
  box-sizing: border-box;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
}

.input-field::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

/* 驗證碼組 */
.verification-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.verification-input {
  flex: 1;
}

.verification-btn {
  padding: 20rpx 30rpx;
  color: #cfb679;
  border-radius: 12rpx;
  font-size: 28rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
  font-weight: 500;
}

.verification-btn.disabled {
  color: #fff;
}

/* 眼睛圖標 */
.eye-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.eye-image {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.8;
}

/* 密碼格式提示 */
.password-tip {
  margin:-10px 0 10px;
  padding: 0 24rpx;
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255);
  line-height: 1.4;
}

/* 協議容器 */
.agreement-container {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 20rpx;
  flex-wrap: nowrap;
  white-space: nowrap;
  overflow: hidden;
}

.agreement-checkbox {
  transform: scale(0.8);
  flex-shrink: 0;
}

.agreement-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255);
  white-space: nowrap;
  flex-shrink: 0;
}

.link-text {
  color: #cfb679;
  font-weight: 500;
  position: relative;
  white-space: nowrap;
  flex-shrink: 0;
}

/* 註冊按鈕 */
.register-btn {
  margin-top: 40rpx;
  width: 100%;
  height: 100rpx;
  border-radius: 48rpx;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
  margin-right: auto;
}

.register-btn.active {
  background: #175c77;
  color: white;
}

.register-btn.disabled {
  background: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.5);
  box-shadow: none;
}

.register-btn.active:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(74, 144, 226, 0.3);
}

/* 底部指示器 */
.bottom-indicators {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  padding: 40rpx 0;
}

.indicator {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #e0e0e0;
  transition: all 0.3s ease;
}

.indicator.active {
  background: #4a90e2;
  transform: scale(1.2);
}

/* 響應式適配 */
@media (max-width: 750rpx) {
  .main-content {
    padding: 30rpx 40rpx;
  }
  
  .title {
    font-size: 42rpx;
    margin-bottom: 50rpx;
  }
  
  .input-field {
    font-size: 30rpx;
  }
  
  .register-btn {
    height: 90rpx;
    font-size: 34rpx;
  }
}