/* 协议查看器组件样式 */
.protocol-viewer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 20rpx;
}

.protocol-viewer {
  background: #fff;
  border-radius: 24rpx;
  margin: 0;
  max-width: 600rpx;
  width: 100%;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
}

/* 头部样式 */
.protocol-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx 20rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.protocol-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.protocol-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
  cursor: pointer;
}

.protocol-close:active {
  background: #f5f5f5;
  border-radius: 50%;
}

/* 内容区域样式 */
.protocol-content {
  flex: 1;
  padding: 24rpx 32rpx;
  max-height: 70vh;
  box-sizing: border-box;
}

/* 加载状态样式 */
.protocol-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #0b2853;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态样式 */
.protocol-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.error-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 32rpx;
}

.retry-btn {
  background: #0b2853;
  color: #fff;
  border: none;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
}

/* 协议文本样式 */
.protocol-text {
  line-height: 1.8;
  color: #333;
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

.protocol-text text {
  white-space: pre-wrap;
  word-break: break-all;
  display: block;
  width: 100%;
  box-sizing: border-box;
}

/* 底部按钮样式 */
.protocol-footer {
  padding: 20rpx 32rpx 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.protocol-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  border: none;
}

.protocol-btn.confirm {
  background: #0b2853;
  color: #fff;
}

.protocol-btn.confirm:active {
  background: #0a1f3f;
} 